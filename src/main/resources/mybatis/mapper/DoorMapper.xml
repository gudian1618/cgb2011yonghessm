<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 门店表的映射文件	namespace值为对应接口的全路径 -->
<mapper namespace="com.github.gudian1618.cgb2011yonghessm.dao.DoorMapper">
    <!-- 1.查询所有门店信息，id值为对应接口中方法的名字
        resultType指定将查询的结果封装到哪个pojo对象中
     -->
    <select id="findAll" resultType="com.github.gudian1618.cgb2011yonghessm.pojo.Door">
        select * from tb_door;
    </select>

    <!--2.根据id删除门店信息-->
    <delete id="deleteById">
        delete from tb_door where id=#{id}
    </delete>

    <!--3.新增门店信息-->
    <update id="add">
        insert into tb_door value(null, #{name}, #{tel}, #{addr})
    </update>

    <!--4.根据id查询门店信息-->
    <select id="findById" resultType="com.github.gudian1618.cgb2011yonghessm.pojo.Door">
        select * from tb_door where id=#{id}
    </select>

</mapper>
